<% layout("/layouts/boilerplate")%>
<body>
    <div class="userMain" > 
        <h3><b style="color: #dc3546;">Login Into wonderLust</b></h3>   
        <div class="formUserMain" >
            <form method="post" class="needs-validation formUser" novalidate action="/login">
                <div class="md-3">
                    <label for="validationCustomUsername" class="form-label">Username</label>
                    <div class="input-group usernameStyle has-validation">
                        <span class="input-group-text" id="inputGroupPrepend">@</span>
                        <input type="text" class="form-control" id="validationCustomUsernam" name="username" placeholder="username" aria-describedby="inputGroupPrepend" required>
                        <div class="invalid-feedback">
                            Enter Username.
                        </div>
                        <div class="valid-feedback">
                            Looks good!
                        </div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="inputPassword5" class="form-label">Password</label>
                    <input type="password" id="inputPassword5" class="form-control" name="password" aria-describedby="passwordHelpBlock" placeholder="password" required>
                    <div id="passwordHelpBlock" class="form-text">
                        Your password must be 8-20 characters long, contain letters and numbers, and must not contain spaces, special characters, or emoji.
                    </div>
                    <div class="invalid-feedback">
                            Enter Password.
                    </div>
                    <div class="valid-feedback">
                        Looks good!
                    </div>
                </div>
                <button class="btn btn-danger" type="submit" >Login</button>
            </form> 
        </div>
    </div>
</body>
